<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModificarEmpleadoActivity">

    <EditText
        android:id="@+id/et_activo_empleado_edi"
        android:layout_width="238dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@android:color/background_dark"
        android:ems="10"
        android:inputType="textPersonName"
        android:selectAllOnFocus="true"
        android:text="Nomina"
        android:textColor="@android:color/background_dark"
        android:textColorHighlight="@android:color/darker_gray"
        android:textColorHint="#FFFFFF"
        android:textColorLink="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="@+id/et_salario_empleado_Ed"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_salario_empleado_Ed"
        app:layout_constraintTop_toBottomOf="@+id/et_salario_empleado_Ed" />

    <TextView
        android:id="@+id/tv_modifcar_empleado"
        android:layout_width="246dp"
        android:layout_height="45dp"
        android:layout_marginTop="60dp"
        android:background="#000000"
        android:backgroundTint="@android:color/background_light"
        android:text="Empleado"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etv_nombre_empleado_mod"
        android:layout_width="238dp"
        android:layout_height="56dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="@android:color/background_dark"
        android:ems="10"
        android:focusableInTouchMode="true"
        android:hint="Nombre Cancion"
        android:inputType="textPersonName"
        android:selectAllOnFocus="true"
        android:singleLine="false"
        android:text="Nombre "
        android:textAlignment="viewStart"
        android:textColor="@android:color/background_dark"
        android:textColorHighlight="@android:color/darker_gray"
        android:textColorHint="#FDFBFB"
        android:textColorLink="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="@+id/tv_modifcar_empleado"
        app:layout_constraintHorizontal_bias="0.375"
        app:layout_constraintStart_toStartOf="@+id/tv_modifcar_empleado"
        app:layout_constraintTop_toBottomOf="@+id/tv_modifcar_empleado" />

    <EditText
        android:id="@+id/etv_empleado_area"
        android:layout_width="238dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@android:color/background_dark"
        android:ems="10"
        android:focusableInTouchMode="true"
        android:inputType="textPersonName"
        android:selectAllOnFocus="true"
        android:singleLine="false"
        android:text="DivisiÃ³n"
        android:textAlignment="viewStart"
        android:textColor="@android:color/background_dark"
        android:textColorHighlight="@android:color/darker_gray"
        android:textColorHint="#FDFBFB"
        android:textColorLink="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="@+id/etv_nombre_empleado_mod"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/etv_nombre_empleado_mod"
        app:layout_constraintTop_toBottomOf="@+id/etv_nombre_empleado_mod" />

    <EditText
        android:id="@+id/et_salario_empleado_Ed"
        android:layout_width="238dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@android:color/background_dark"
        android:ems="10"
        android:inputType="textPersonName"
        android:selectAllOnFocus="true"
        android:text="Salario"
        android:textColor="@android:color/background_dark"
        android:textColorHighlight="@android:color/darker_gray"
        android:textColorHint="#FBFBFB"
        android:textColorLink="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="@+id/etv_empleado_area"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/etv_empleado_area"
        app:layout_constraintTop_toBottomOf="@+id/etv_empleado_area" />

    <Button
        android:id="@+id/btn_modificar_pokemon"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="296dp"
        android:background="@android:color/background_dark"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:lineSpacingExtra="30sp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="Modificar"
        android:textColor="#F8F8F8"
        app:layout_constraintEnd_toEndOf="@+id/et_activo_empleado_edi"
        app:layout_constraintStart_toStartOf="@+id/et_activo_empleado_edi"
        app:layout_constraintTop_toBottomOf="@+id/tv_modifcar_empleado" />

    <Button
        android:id="@+id/btn_eliminar_pokemon"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="64dp"
        android:background="#3F51B5"
        android:backgroundTint="@android:color/holo_red_light"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="Eliminar"
        android:textColor="#FAF8F8"
        app:layout_constraintEnd_toEndOf="@+id/btn_modificar_pokemon"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_modificar_pokemon"
        app:layout_constraintTop_toTopOf="@+id/btn_modificar_pokemon" />

</androidx.constraintlayout.widget.ConstraintLayout>