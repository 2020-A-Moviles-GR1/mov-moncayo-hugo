<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmpresaActivity">

    <Button
        android:id="@+id/btn_a_acordeslist"
        android:layout_width="178dp"
        android:layout_height="39dp"
        android:layout_marginTop="128dp"
        android:background="@color/colorAccent"
        android:backgroundTint="@color/colorAccent"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="Empleados"
        android:textColor="#FAF8F8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.527"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <Button
        android:id="@+id/btn_cancion_a_main"
        android:layout_width="178dp"
        android:layout_height="39dp"
        android:layout_marginEnd="100dp"
        android:background="?android:attr/textColorHintInverse"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="Regresar"
        android:textColor="@android:color/background_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_eliminar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_eliminar"
        app:layout_constraintTop_toBottomOf="@+id/btn_eliminar"
        app:layout_constraintVertical_bias="0.223" />

    <TextView
        android:id="@+id/tv_pokemones"
        android:layout_width="147dp"
        android:layout_height="18dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Any"
        android:textColor="@android:color/background_dark"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/tv_activo_entre" />

    <TextView
        android:id="@+id/tv_activo_entre"
        android:layout_width="147dp"
        android:layout_height="18dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="20dp"
        android:text="Any"
        android:textColor="@android:color/background_dark"
        app:layout_constraintStart_toEndOf="@+id/tv_j"
        app:layout_constraintTop_toBottomOf="@+id/tv_nivel" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="16dp"
        android:text="Empleados:"
        android:textColor="#3F51B5"
        app:layout_constraintEnd_toEndOf="@+id/tv_j"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_j" />

    <TextView
        android:id="@+id/tv_j"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="16dp"
        android:text="Activo"
        android:textColor="#3F51B5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/tv_nivel"
        android:layout_width="147dp"
        android:layout_height="18dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="20dp"
        android:text="Any"
        android:textColor="@android:color/background_dark"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/tv_color" />

    <TextView
        android:id="@+id/tv_color"
        android:layout_width="147dp"
        android:layout_height="18dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="20dp"
        android:text="Any"
        android:textColor="@android:color/background_dark"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/tv_nombre" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="20dp"
        android:text="Direccción: "
        android:textColor="#3F51B5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="20dp"
        android:text="Teléfono:"
        android:textColor="#3F51B5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="20dp"
        android:text="Nombre Empresa:"
        android:textColor="#3F51B5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textEmpresa" />

    <TextView
        android:id="@+id/textEmpresa"
        android:layout_width="376dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:background="#FFFFFF"
        android:backgroundTint="@android:color/background_light"
        android:text="Empresa"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_nombre"
        android:layout_width="147dp"
        android:layout_height="18dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="20dp"
        android:text="Any"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textEmpresa" />

    <Button
        android:id="@+id/btn_modificar"
        android:layout_width="178dp"
        android:layout_height="39dp"
        android:layout_marginTop="20dp"
        android:background="#3F51B5"
        android:backgroundTint="@android:color/holo_blue_light"
        android:lineSpacingExtra="30sp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="Modificar"
        android:textColor="#F8F8F8"
        app:layout_constraintEnd_toEndOf="@+id/btn_a_acordeslist"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_a_acordeslist"
        app:layout_constraintTop_toBottomOf="@+id/btn_a_acordeslist" />

    <Button
        android:id="@+id/btn_eliminar"
        android:layout_width="178dp"
        android:layout_height="39dp"
        android:layout_marginTop="20dp"
        android:background="#3F51B5"
        android:backgroundTint="@android:color/holo_red_light"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="Eliminar"
        android:textColor="#FAF8F8"
        app:layout_constraintEnd_toEndOf="@+id/btn_modificar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_modificar"
        app:layout_constraintTop_toBottomOf="@+id/btn_modificar" />


</androidx.constraintlayout.widget.ConstraintLayout>